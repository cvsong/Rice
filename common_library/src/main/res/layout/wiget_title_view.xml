<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_title"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/title_background"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    >


    <RelativeLayout
        android:id="@+id/rl_subtitle_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:maxWidth="80dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_subtitle_left"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_left_arrow"/>

        <TextView
            android:id="@+id/tv_subtitle_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_subtitle_left"
            android:maxLength="4"
            android:maxLines="1"
            android:hint="左副标题"
            android:textColorHint="@color/title_font_white"
            android:textColor="@color/title_font_white"
            android:textSize="@dimen/title_font_other"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLength="7"
        android:hint="主标题"
        android:textColorHint="@color/title_font_white"
        android:textColor="@color/title_font_white"
        android:textSize="@dimen/title_font_normal"/>


    <RelativeLayout
        android:id="@+id/rl_subtitle_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:maxWidth="100dp"
        android:minWidth="100dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_subtitle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/icon_left_arrow"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_subtitle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:hint="右副标题"
            android:textColorHint="@color/title_font_white"
            android:textColor="@color/title_font_white"
            android:textSize="@dimen/title_font_other"/>

    </RelativeLayout>


</RelativeLayout>
